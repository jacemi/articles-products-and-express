<form action="/articles/{{title}}?_method=PUT" method="POST">

  {{#if postError}}
  <p>{{>post-unsuccessful}}</p>
  {{/if}}

  <label for="title">Title:</label>
  <input type="text" name="title" id="title" value="{{title}}"> {{#if titleCheck}}
  <p>{{>no-title}}</p>
  {{/if}}


  <label for="body">Body:</label>
  <input type="text" name="body" id="body" value="{{body}}"> {{#if bodyCheck}}
  <p>{{>no-body}}</p>
  {{/if}}

  <label for="author">Author:</label>
  <input type="text" name="author" id="author" value="{{author}}"> {{#if authorCheck}}
  <p>{{>no-author}}</p>
  {{/if}} {{#if existenceCheck}}
  <p>{{>already-exists}}</p>
  {{/if}}

  <button type="submit">Submit Changes </button>
</form>
<form action="/articles/{{title}}?_method=DELETE" method="POST">
  <button type="submit">Delete Article</button>
</form>
<a href="/articles/{{title}}">Back to Article Page</a>
<a href="/articles">Back to Articles Listing</a>